@{
    int? orderId = TempData["OrderId"] as int?;
    int? userId = TempData["UserId"] as int?;
}

<!DOCTYPE html>
<html>
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <title>Order Confirmation</title>
    <style>
        body {
            background-color: #f5f5f5;
            font-family: 'Arial', sans-serif;
        }

        .confirmation-message {
            background-color: #e7f9ed;
            padding: 20px;
            border: 1px solid #c1eac5;
            color: #28a745;
            border-radius: 8px;
            margin-bottom: 20px;
            text-align: center;
        }

        h2 {
            color: #333;
            font-weight: bold;
            margin-bottom: 20px;
        }

        p {
            color: #555;
            font-size: 16px;
        }

        .total-price {
            font-size: 20px;
            color: #28a745;
            font-weight: bold;
            margin-top: 20px;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="confirmation-message">
            <h2>Order Successfully Placed!</h2>
            <p>Your order has been placed successfully. Thank you for shopping with us!</p>
        </div>

        <h2>Order Confirmation</h2>
        <p><strong>Username:</strong> @TempData["UserName"]</p>
        <p><strong>Address:</strong> @TempData["Address"]</p>
        <p><strong>Email:</strong> @TempData["Email"]</p>
        <h3 class="total-price">Total Price: @TempData["TotalPrice"]</h3>

        @if (orderId.HasValue && userId.HasValue)
        {
            <p>You can view your invoice <a href="@Url.Action("GetInvoice", "Cart", new { userId = userId.Value, orderId = orderId.Value })" target="_blank">here</a>.</p>
        }
    </div>
</body>
</html>
