@model OrderConfirmationViewModel

<!DOCTYPE html>
<html>
<head>
    <title>Order Bill</title>
   
</head>
<style>
    /* Existing CSS here */

    body, html {
        height: 100%;
        margin: 0;
    }

    .page-container {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh; /* Full viewport height */
        background-color: #f4f4f4; /* Background color for the whole page */
    }

    .receipt-main {
        background-color: #ffffff;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        width: 100%;
        max-width: 800px; /* Maximum width of the bill */
    }

    .receipt-header {
        border-bottom: 2px solid #000;
        padding-bottom: 10px;
        margin-bottom: 20px;
    }

    .receipt-header-mid {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

        .receipt-header-mid .receipt-left h3 {
            margin: 0;
            font-size: 20px;
            color: #333;
        }

    .receipt-right p {
        margin: 5px 0;
    }

    .receipt-right h5 {
        margin: 0;
        font-size: 16px;
        color: #555;
    }

    .table {
        width: 100%;
        margin-bottom: 20px;
        border-collapse: collapse;
    }

    .table-bordered {
        border: 1px solid #ddd;
    }

        .table-bordered th,
        .table-bordered td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: right;
        }

        .table-bordered th {
            background-color: #f4f4f4;
            font-weight: bold;
        }

    .text-left {
        text-align: left;
    }

    .text-right {
        text-align: right;
    }

    .receipt-footer {
        border-top: 2px solid #000;
        padding-top: 10px;
        margin-top: 20px;
    }

        .receipt-footer p {
            margin: 0;
        }

        .receipt-footer h5 {
            margin: 0;
            color: #8c8c8c;
        }

    h2 {
        margin: 0;
        font-size: 18px;
        color: #333;
    }
</style>
<body>
    <h1>Order Confirmation</h1>
    <p>Thank you, @Model.UserName, for your order!</p>
    <p>Shipping Address: @Model.Address</p>
    <p>Email: @Model.Email</p>

    <h2>Order Summary</h2>
    <table>
        <thead>
            <tr>
                <th>Product Name</th>
                <th>Quantity</th>
                <th>Price</th>
                <th>Total</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.CartItems)
            {
                <tr>
                    <td>@item.ProductName</td>
                    <td>@item.Quantity</td>
                    <td>@item.Price.ToString("C")</td>
                    <td>@item.Total.ToString("C")</td>
                </tr>
            }
        </tbody>
    </table>

    <h2>Total Price: @Model.TotalPrice.ToString("C")</h2>
</body>
</html>

</html>


