@model NexsusEcommerce.Models.Category

@{
    ViewData["Title"] = "Create Category";
}

<div class="container mx-auto mt-8 px-4">
    <h1 class="text-4xl font-extrabold text-gray-900 mb-8">Create New Category</h1>

    <form asp-action="Create" method="post" class="bg-white border border-gray-300 rounded-lg shadow-lg p-6">
        <div class="mb-4">
            <label class="block text-gray-700">Category Name</label>
            <input asp-for="CategoryName" class="border border-gray-300 p-2 w-full rounded" />
            <span asp-validation-for="CategoryName" class="text-red-500"></span>
        </div>
        <div class="mb-4">
            <label class="block text-gray-700">Description</label>
            <textarea asp-for="Description" class="border border-gray-300 p-2 w-full rounded"></textarea>
            <span asp-validation-for="Description" class="text-red-500"></span>
        </div>
        <button type="submit" class="bg-green-500 text-white px-4 py-2 rounded hover:bg-green-600">Create</button>
    </form>
</div>
