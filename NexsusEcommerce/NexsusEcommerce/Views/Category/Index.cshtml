@model IEnumerable<NexsusEcommerce.Models.Category>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Categories</title>
    
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <link href="css/tiny-slider.css" rel="stylesheet">
    <link href="css/Index.css" rel="stylesheet">

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
=
    <script src="https://cdn.jsdelivr.net/npm/popperjs/core@2.11.7/dist/umd/popper.min.js"></script>
 
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">

    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f9fafb;
        }

        h1 {
            color: #1f2937;
        }

   
        .table-container {
            max-height: 400px; 
            overflow-y: auto;
            border: 1px solid #ddd;
            border-radius: 0.5rem;
            position: relative;
        }

  
            .table-container thead {
                position: -webkit-sticky;
                position: sticky;
                top: 0;
                background-color: #f3f4f6;
                z-index: 1;
            }

        table {
            border-collapse: collapse;
            width: 100%;
        }

        thead th {
            border-bottom: 2px solid #e5e7eb;
        }

        tbody tr:hover {
            background-color: #f3f4f6;
        }

        a {
            text-decoration: none;
        }

        .shadow-lg {
            box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
        }

        .transition {
            transition: all 0.3s ease-in-out;
        }

        .rounded-lg {
            border-radius: 0.5rem;
        }

        .hover\:bg-gray-100:hover {
            background-color: #f3f4f6;
        }

        .hover\:underline:hover {
            text-decoration: underline;
        }

 
        .btn-custom {
            padding: 0.375rem 0.75rem;
            font-size: 0.875rem;
            border-radius: 0.375rem;
            font-weight: 600;
        }

        .btn-edit {
            background-color: #3b82f6;
            color: #fff;
        }

            .btn-edit:hover {
                background-color: #2563eb;
            }

        .btn-delete {
            background-color: #ef4444;
            color: #fff;
        }

            .btn-delete:hover {
                background-color: #dc2626;
            }


        .invisible-scrollbar::-webkit-scrollbar {
            width: 0;
            height: 0;
        }

        .invisible-scrollbar {
            scrollbar-width: none; 
            -ms-overflow-style: none;
            overflow-y: auto; 
            max-height: 400px; 
        }
    </style>
</head>
<body>
    <div class="container mx-auto mt-5 px-4">
        <h1 class="text-4xl font-bold text-gray-800 mb-6">Categories</h1>

  
        <div class="d-flex p-3  text-white"style="background-color:#fff;gap:20px;">
        <div class="mb-6">
            <a href="@Url.Action("Create", "Category")" class="inline-block bg-green-600 text-white px-6 py-2 rounded-md shadow-lg hover:bg-green-700 transition duration-300">
                Create New Category
            </a>
        </div>
        <div class="mb-6">
            <a href="@Url.Action("Index","Product")" class="inline-block bg-green-600 text-white px-6 py-2 rounded-md shadow-lg hover:bg-green-700 transition duration-300">
                View Products
            </a>
        </div>
        </div>

        <div class="table-container shadow-lg rounded-lg invisible-scrollbar">
            <table class="min-w-full bg-white border border-gray-300 rounded-lg">
                <thead class="bg-gray-100">
                    <tr>
                        <th class="py-3 px-6 text-left text-sm font-medium text-gray-700">Category Name</th>
                        <th class="py-3 px-6 text-left text-sm font-medium text-gray-700">Description</th>
                        <th class="py-3 px-6 text-left text-sm font-medium text-gray-700">Actions</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-200">
                    @foreach (var category in Model)
                    {
                        <tr class="hover:bg-gray-100 transition duration-200">
                            <td class="py-4 px-6 text-gray-900">@category.CategoryName</td>
                            <td class="py-4 px-6 text-gray-700">@category.Description</td>
                            <td class="py-4 px-6">

                                <a href="@Url.Action("Edit", "Category", new { id = category.CategoryId })" class="btn btn-custom btn-edit mr-2">
                                    <i class="fas fa-edit"></i> Edit
                                </a>

                                <a href="@Url.Action("Delete", "Category", new { id = category.CategoryId })" class="btn btn-custom btn-delete">
                                    <i class="fas fa-trash"></i> Delete
                                </a>

                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>


    <script src="https://code.jquery.com/jquery-3.6.0.min.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-kQtW33rZJAHjgefvHbP/0Y1TOp8JibMcDgtlf9ffB1w5i0REmf7a2IfhI/4C4FS6" crossorigin="anonymous"></script>
    
	
    <script src="js/bootstrap.bundle.min.js"></script>
    <script src="js/tiny-slider.js"></script>
    <script src="js/custom.js"></script>
</body>
</html>
