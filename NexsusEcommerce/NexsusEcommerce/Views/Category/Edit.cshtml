@model NexsusEcommerce.Models.Category

@{
    ViewData["Title"] = "Edit Category";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Edit Category</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f9fafb;
        }

        h1 {
            color: #1f2937;
        }

        .container {
            max-width: 800px;
        }

        .form-container {
            background-color: #ffffff;
            border: 1px solid #d1d5db;
            border-radius: 0.5rem;
            box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
            padding: 2rem;
            transition: transform 0.3s ease-in-out, box-shadow 0.3s ease-in-out;
        }

            .form-container:hover {
                transform: scale(1.03);
                box-shadow: 0 15px 25px -5px rgba(0, 0, 0, 0.2), 0 6px 10px -4px rgba(0, 0, 0, 0.15);
            }

        .form-label {
            display: block;
            color: #4b5563;
            margin-bottom: 0.5rem;
        }

        .form-input {
            border: 1px solid #d1d5db;
            padding: 0.75rem;
            width: 100%;
            border-radius: 0.375rem;
        }

        .form-textarea {
            border: 1px solid #d1d5db;
            padding: 0.75rem;
            width: 100%;
            border-radius: 0.375rem;
            min-height: 150px;
        }

        .form-error {
            color: #ef4444;
            font-size: 0.875rem;
            margin-top: 0.25rem;
        }

        .btn-custom {
            padding: 0.375rem 0.75rem;
            font-size: 0.875rem;
            border-radius: 0.375rem;
            font-weight: 600;
            display: inline-block;
            text-align: center;
        }

        .btn-save {
            background-color: #3b82f6;
            color: #fff;
        }

            .btn-save:hover {
                background-color: #2563eb;
            }
    </style>
</head>
<body>
    <div class="container mx-auto mt-8 px-4">
        <h1 class="text-4xl font-extrabold text-gray-900 mb-8">Edit Category</h1>

        <form asp-action="Edit" method="post" class="form-container">
            <input type="hidden" asp-for="CategoryId" />
            <div class="mb-4">
                <label class="form-label">Category Name</label>
                <input asp-for="CategoryName" class="form-input" />
                <span asp-validation-for="CategoryName" class="form-error"></span>
            </div>
            <div class="mb-4">
                <label class="form-label">Description</label>
                <textarea asp-for="Description" class="form-textarea"></textarea>
                <span asp-validation-for="Description" class="form-error"></span>
            </div>
            <button type="submit" class="btn-custom btn-save">
                Save Changes
            </button>
        </form>
    </div>


    <script src="https://code.jquery.com/jquery-3.6.0.min.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-kQtW33rZJAHjgefvHbP/0Y1TOp8JibMcDgtlf9ffB1w5i0REmf7a2IfhI/4C4FS6" crossorigin="anonymous"></script>
</body>
</html>
