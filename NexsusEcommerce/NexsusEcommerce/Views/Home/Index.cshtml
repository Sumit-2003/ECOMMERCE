@model IEnumerable<NexsusEcommerce.Models.Category>

@{
    ViewData["Title"] = "Categories";
}

<div class="container mx-auto mt-8 px-4">
    <h1 class="text-4xl font-extrabold text-gray-900 mb-8">Categories</h1>
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-8">
        @foreach (var category in Model)
        {
            <div class="bg-white border border-gray-300 rounded-lg shadow-lg transition-transform transform hover:scale-105 hover:shadow-xl p-6">
                <h5 class="text-2xl font-semibold text-gray-800 mb-4">@category.CategoryName</h5>
                <p class="text-gray-600">@category.Description</p>
            </div>
        }
    </div>
</div>
