<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - NexsusEcommerce</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="bg-gray-800 p-4">
            <div class="container mx-auto flex justify-between items-center">
                <a class="text-white text-2xl font-semibold" href="/">NexsusEcommerce</a>
                <div>
                    <a class="text-white px-4 py-2 hover:bg-gray-700 rounded" href="@Url.Action("Index", "Home")">Home</a>
                    <a class="text-white px-4 py-2 hover:bg-gray-700 rounded" href="@Url.Action("Index", "Category")">Categories</a>
                    <!-- Add other links as needed -->
                </div>
            </div>
        </nav>
    </header>
    <main class="container mx-auto mt-4">
        @RenderBody()
    </main>
</body>
</html>
